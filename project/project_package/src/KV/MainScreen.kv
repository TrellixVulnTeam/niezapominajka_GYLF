<MainScreen>:
    FloatLayout:
        orientation: 'vertical'
        MDToolbar:
            id: main_screen_toolbar
            title: ""
            pos_hint:{"top": 0.9}
            right_action_items:[["arrow-right-bold", lambda x: app.other_day(1)]]
            left_action_items: [["arrow-left-bold", lambda x: app.other_day(-1)]]


        ScrollView:
            pos_hint:{"top": 0.8}
            MDList:
                id:plants_to_water

        MDIconButton:
            id: water_all_button
            icon: "watering-can"
            pos_hint: {"center_x": 0.8, "center_y": 0.1}
            md_bg_color: app.theme_cls.primary_color
            on_press: app.water_all()
