<MainScreen>:
    FloatLayout:
        orientation: 'vertical'
        MDToolbar:
            id: main_screen_toolbar
            title: ""
            pos_hint:{"top": 0.9}
            right_action_items:[["arrow-right-bold", lambda x: app.other_day(1)]]
            left_action_items: [["arrow-left-bold", lambda x: app.other_day(-1)]]

        MDRoundFlatIconButton:
            id: login_button
            text: "Podlej wszystkie"
            icon: "watering-can"
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            md_bg_color: app.theme_cls.primary_color
            on_release: app.login(user_name_text_field.text, password_field.text)

        ScrollView:
            pos_hint:{"top": 0.65}
            MDList:
                id:plants_to_water
