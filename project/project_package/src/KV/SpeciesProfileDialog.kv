<SingleSpecies>:
    id: single_species
    on_press:
        app.show_species_profile_dialog(single_species.text)


<SpeciesProfileDialog>:
    spacing: "12dp"
    size_hint_y: None
    size: (200, 500)

    Image:
        id: species_photo
        source: ""
        pos_hint: {"center_x": 0.8, "center_y": 0.9}
        size_hint_x: 0.4
        size_hint_y: 0.4

    MDLabel:
        id: species_name
        text: "Species name"
        pos_hint: {"center_x": 0.5, "center_y": 1}
        font_size: 25

    MDLabel:
        id: latin_species_name
        text: "Species latin name"
        pos_hint: {"center_x": 0.5, "center_y": 0.85}

    MDLabel:
        id: watering_days
        text: "Days between watering"
        pos_hint: {"center_x": 0.5, "center_y": 0.75}

    MDLabel:
        id: sun
        text: "Sun"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    MDLabel:
        id: care_tips
        text: "Care tips"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}

    MDLabel:
        id: notes
        text: "Notes"
        pos_hint: {"center_x": 0.5, "center_y": 0.2}

    MDRaisedButton:
        id: add
        text: "Add a new plant"
        pos_hint: {"center_x": 0.5, "center_y": 0.05}
        on_press: app.show_add_plant_dialog(species_name.text), app.close_dialog()

<MDMenuItem>:
    on_release:
        app.root.ids.mainbutton.text = self.text
        app.root.change_variable(self.text)

<AddPlantDialog>:
    id: add_plant_dialog
    spacing: "12dp"
    size_hint_y: None
    size: (200, 500)


    MDTextField:
        id: plant_name
        mode: 'rectangle'
        icon_left: 'flower'
        color_active: 0, 1, 0, 1
        hint_text: "Imie"
        required: True
        max_text_length: 15
        pos_hint: {"center_x": 0.5, "center_y": 0.8}


    MDLabel:
        id: warning_name
        text: ""
        pos_hint: {"center_x": 0.5, "center_y": 0.5}


    MDLabel:
        id: species_name
        text: ""
        pos_hint: {"center_x": 0.5, "center_y": 0.7}

    MDTextFieldRound:
        id: choose_room
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        icon_left: 'window-open-variant'
        color_active: 0, 1, 0, 1
        hint_text: "Room"
        required: True
        max_text_length: 15

    MDTextFieldRound:
        id: about_me
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        icon_left: 'flower-outline'
        color_active: 0, 1, 0, 1
        hint_text: "O mnie"
        required: True
        max_text_length: 150

    MDRaisedButton:
        id: add
        text: "Add a new plant"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        on_press: app.add_plant(plant_name.text, species_name.text, choose_room.text, about_me.text)



