<SingleSpecies>:
    id: single_species
    on_press:
        app.show_species_profile_dialog(single_species.text)


<SpeciesProfileDialog>:
    spacing: "12dp"
    size_hint_y: None
    size: (200, 500)

    Image:
        id: species_photo
        source: "GUI/images/basic.png"
        pos_hint: {"center_x": 0.5, "center_y": 0.95}
        size_hint_x: 0.4
        size_hint_y: 0.4

    MDLabel:
        id: species_name
        text: "Species name"
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    MDLabel:
        id: latin_species_name
        text: "Species latin name"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}

    MDLabel:
        id: watering_days
        text: "Days between watering"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    MDLabel:
        id: care_tips
        text: "Care tips"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDLabel:
        id: notes
        text: "Notes"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}

    MDLabel:
        id: origin
        text: "Origin"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

    MDLabel:
        id: sun
        text: "Sun"
        pos_hint: {"center_x": 0.5, "center_y": 0.2}

    MDRaisedButton:
        id: add
        text: "Add a new plant"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        on_press: app.show_add_plant_dialog(species_name.text), app.close_dialog()


<AddPlantDialog>:
    spacing: "12dp"
    size_hint_y: None
    size: (200, 500)

    MDTextField:
        id: plant_name
        hint_text: "Plant name"
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    MDLabel:
        id: species_name
        text: ""
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    MDRaisedButton:
        id: add
        text: "Add a new plant"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        on_press: app.add_plant(plant_name.text, species_name.text), app.close_add_plant_dialog()



