<LoginDialog>:
    id:login_dialog
    spacing: "12dp"
    size_hint_y: None
    size: (200, 200)

    MDLabel:
        text: "You want to log in?"
        pos_hint: {"center_x": 0.5, "center_y": 1}

    MDTextField:
        icon_right: "email"
        hint_text: "email"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        helper_text_mode: "persistent"

    MDTextField:
        icon_right: "key-variant"
        hint_text: "password"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        helper_text_mode: "persistent"
        password: True

    MDRaisedButton:
        id: login
        text: "Log in"
        pos_hint: {"center_x": 0.4, "center_y": 0.1}


    MDRaisedButton:
        text: "Sign in"
        pos_hint: {"center_x": 0.8, "center_y": 0.1}
        on_release: app.show_sign_up_dialog()