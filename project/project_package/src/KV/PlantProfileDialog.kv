<SinglePlant>:
    id: single_plant
    on_press:
        app.show_plant_profile_dialog(single_plant.text)

<SinglePlantToWater>
    id: single_plant_to_water
    on_press:
        app.show_plant_profile_dialog(single_plant_to_water.text)
    IconLeftWidget:
        icon: root.icon


<DeletePlantDialog>:
    spacing: "12dp"
    size_hint_y: None
    size: (200, 350)

    MDLabel:
        id: plant_name
        text: "O nie!!\nCo się stało z ?"
        halign: "center"
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
        theme_text_color: "Primary"

    MDRaisedButton:
        id: delete1
        text: "Nowy dom"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        opacity: 1
        disabled: False
        on_press: app.delete_plant(plant_name.text, "new_house"), app.delete_plant_dialog.dismiss(), app.dialog.dismiss()

    MDRaisedButton:
        id: delete2
        text: "Zarcik"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        opacity: 1
        disabled: False
        on_press: app.delete_plant(plant_name.text, "joke")

    MDRaisedButton:
        id: delete3
        text: "Umarła"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        opacity: 1
        disabled: False
        on_press: app.delete_plant(plant_name.text, "dead"), app.delete_plant_dialog.dismiss(), app.dialog.dismiss()



<PlantProfileDialog>:
    spacing: "12dp"
    size_hint_y: None
    size: (200, 350)

    Image:
        id: plant_photo
        source: "GUI/images/basic.png"
        pos_hint: {"center_x": 0.8, "center_y": 0.9}
        size_hint_x: 0.4
        size_hint_y: 0.4

    MDLabel:
        id: plant_name
        text: "Plant name"
        pos_hint: {"center_x": 0.5, "center_y": 0.9}

    MDLabel:
        id: species
        text: "Species"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}

    MDLabel:
        id: room
        text: "Room"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDLabel:
        id: last_water
        text: "Last water"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

    MDLabel:
        id: notes
        text: "Notes"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}

    MDIconButton:
        id: watering_can_button
        icon: "watering-can"
        pos_hint: {"center_x": 0.9, "center_y": 0.1}
        on_release: app.water_plant(plant_name.text)

    MDIconButton:
        id: delete_button
        icon: "trash-can-outline"
        pos_hint: {"center_x": 0.9, "center_y": 0.3}
        on_release: app.show_delete_plant_dialog(plant_name.text)

