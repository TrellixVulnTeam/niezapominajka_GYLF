<SpeciesScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: " "
            halign: "center"
            size_hint: (1, 0.1)

        Image:
            id: species_photo
            source: 'GUI/images/test.jpg'
            size_hint_y: .6
            size_hint_x: .6
            pos_hint: {"center_x": 0.5, "top_y": 0.1}
            radius: [36, 36, 36, 36, ]

        MDLabel:
            id: user_name
            text: "Nazwa użytkownika"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            size_hint: (0.8, 0.1)

        MDLabel:
            id: lvl
            text: "Twój lvl: 10"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            size_hint: (0.8, 0.1)

        MDLabel:
            id: plants_no
            text: "Masz x kwiatków"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            size_hint: (0.8, 0.1)

        MDLabel:
            id: time_from_kill
            text: "Nie zabiłeś roślinki od: ....."
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
