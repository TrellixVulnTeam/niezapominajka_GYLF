#:import utils kivy.utils

<UserScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: " "
            halign: "center"
            size_hint: (1, 0.1)

        Image:
            id: user_photo
            size_hint_y: .5
            size_hint_x: .6
            pos_hint: {"center_x": 0.5, "top_y": 0.1}
            radius: [36, 36, 36, 36, ]

        MDLabel:
            id: user_name
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint: (0.8, 0.1)

        MDLabel:
            id: lvl
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            size_hint: (0.8, 0.1)

        MDLabel:
            id: plants_no
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            size_hint: (0.8, 0.1)

        MDLabel:
            id: time_from_kill
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            size_hint: (0.8, 0.1)