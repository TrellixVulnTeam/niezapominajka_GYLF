<CreateAccountScreen>
    FloatLayout:
        FitImage:
            source: 'images/background.jpg'
        MDLabel:
            id: create_account_screen_warning
            text: ""
            pos_hint: {"center_x": 0.5, "center_y": 0.05}
            theme_text_color: "Error"
            halign: "center"

        MDTextField:
            id: create_user_name_text_field
            mode: 'rectangle'
            icon_left: 'account'
            size_hint: 0.5, None
            hint_text: "Username"
            required: True
            helper_text_mode: "persistent"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDTextField:
            id: create_password_field
            mode: 'rectangle'
            icon_left: "key-variant"
            hint_text: "Password"
            size_hint: 0.5, None
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            helper_text_mode: "persistent"
            required: True
            password: True

        MDTextField:
            id: confirm_password_field
            mode: 'rectangle'
            icon_left: "key-variant"
            hint_text: "Confirm password"
            size_hint: 0.5, None
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            helper_text_mode: "persistent"
            required: True
            password: True

        MDRoundFlatIconButton:
            id: add_account_button
            icon: "account-plus"
            text: "Create an account"
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            focus: True
            md_bg_color: app.theme_cls.primary_color
            on_release: app.create_account(create_user_name_text_field.text, create_password_field.text, confirm_password_field.text)
#            on_release: app.root.ids.create_account_screen.warning("UÅ¼ytkownik " + create_user_name_text_field.text + " istnieje")

        MDRoundFlatIconButton:
            id: comeback_to_login_button
            icon: "account-heart"
            text: "Back to login"
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            md_bg_color: app.theme_cls.primary_color
            on_release: app.change_screen("WelcomeScreen", "Start")