#:import utils kivy.utils

<SettingsScreen>:
    MDFloatLayout:
        orientation: 'vertical'
        MDLabel:
            id: lvl
            text: "Customize the app to suit you"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            font_size: "21sp"


        MDLabel:
            id: dark_mode
            text: "Dark mode"
            pos_hint: {"center_x": 0.4, "center_y": 0.7}
            halign: "center"

        MDSwitch:
            id: dark_mode_switch
            width: dp(45)
            on_active: app.change_mode(self, self.active)
            pos_hint: {"center_x": 0.7, "center_y": 0.7}

        MDRoundFlatIconButton:
            icon: "logout"
            text: "Log out"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            on_press: app.logout()

        MDRoundFlatIconButton:
            icon: "clock-time-eight-outline"
            text: "Choose time for reminder"
            pos_hint: {'center_x': 0.5, "center_y": 0.5}
            on_press:
                app.show_time_picker()

        MDRoundFlatIconButton:
            icon: "more"
            text: "Tips"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_press:
                app.show_alert_dialog("Tip of the day: to have live plants, water them")

        MDRoundFlatIconButton:
            icon: "help-circle"
            text: "Support"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press:
                app.support_event()










