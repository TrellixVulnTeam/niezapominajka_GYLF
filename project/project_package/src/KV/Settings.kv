#:import utils kivy.utils

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: "2dp"
        MDLabel:
            size_hint: (0.8, 0.1)
            halign: "center"

        MDLabel:
            id: lvl
            text: "Customize the app to suit you"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            size_hint: (0.8, 0.2)

        MDFloatLayout:
            orientation: 'vertical'
            padding: 50
            spacing: "50dp"
            valign: "top"
            size_hint: (1, 0.8)

            MDRoundFlatIconButton:
                icon: "clock-time-eight-outline"
                text: "Choose time for reminder"
                pos_hint: {'center_x': .5, "y": 0.2}
                on_press:
                    app.show_time_picker()


            MDRoundFlatIconButton:
                icon: "more"
                text: "Tips"
                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                on_press:
                    app.show_alert_dialog("Tip of the day: to have live plants, water them")

            MDRoundFlatIconButton:
                icon: "help-circle"
                text: "Support"
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                on_press:
                    app.show_alert_dialog("All your questions and doubts forward to wedont@care.com")

            MDRoundFlatIconButton:
                icon: "logout"
                text: "LOGOUT"
                pos_hint: {"center_x": 0.5, "center_y": 0.8}
                on_press: app.logout()





