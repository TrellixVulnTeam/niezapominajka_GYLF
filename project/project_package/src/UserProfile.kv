<ItemDrawer>:

    IconLeftWidget:
        id: icon
        icon: root.icon
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"

    ScrollView:
        DrawerList:
            id: md_list


<UserScreen>:
    MDScreen:
        MDNavigationLayout:
            ScreenManager:
                MDScreen:
                    MDBoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            title: "Your profile"
                            elevation: 10
                            left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
                            specific_text_color: app.theme_cls.accent_color


                        Image:
                            id: user_photo
                            source: 'GUI/images/test.jpg'
                            size_hint_y: .6
                            size_hint_x: .6
                            pos_hint: {"center_x": 0.5, "top_y": 0.1}
                            radius: [36, 36, 36, 36, ]

                        MDLabel:
                            id: user_name
                            text: "Nazwa użytkownika"
                            halign: "center"
                            pos_hint: {"center_x": 0.5, "center_y": 0.4}
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                            size_hint: (0.8, 0.1)

                        MDLabel:
                            id: lvl
                            text: "Twój lvl: 10"
                            halign: "center"
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                            size_hint: (0.8, 0.1)

                        MDLabel:
                            id: plants_no
                            text: "Masz x kwiatków"
                            halign: "center"
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                            size_hint: (0.8, 0.1)

                        MDLabel:
                            id: time_from_kill
                            text: "Nie zabiłeś roślinki od: ....."
                            halign: "center"
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                            size_hint: (0.8, 0.1)



            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    id: content_drawer